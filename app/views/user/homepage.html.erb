<nav>
  <div class="logo"></div>
</nav>
<div class="mobile-screen">
  <div class="header">
    <h1>Login</h1>
  </div>


    <%= form_for :user, :html => { :id => 'registration-form' } do |f| %>
      <%= label_tag(:q, "") %>
      <%= text_field_tag(:q, "First Name") %>
      <%= label_tag(:q, '') %>
      <%= text_field_tag(:q, "Email") %>
      <%= select_tag(:user_age_id, options_for_select([['18-24', 1], ['25-34', 2], ['35-44', 3], ['45-54', 4], ['55-64', 5], ['65-75', 6]])) %>
      <%= select_tag(:user_gender_id, options_for_select([['Female', 1], ['Male', 2]])) %>
      <%= label_tag(:q, '') %>
      <%= text_field_tag(:q, "Password") %>
      <%= label_tag(:q, '') %>
      <%= text_field_tag(:q, "Confirm Password") %>
      <%= f.submit %>
    <% end %>


    <!-- <input class="required" type="name" name="name" placeholder="First Name">

    <div class="login-btn" id="signup-btn"><%= link_to "Sign Up", kohorts_path %></div> -->


  <form id="login-form">
    <input type="email" class="required" name="email" placeholder="Email">
    <input type="password" class="required" name="pass" placeholder="Password">
    <div class="login-btn"><%= link_to "Sign In", kohorts_path %></div>
  </form>

  <form id="fpass-form">
    <input type="text" class="required" name="forgotten" placeholder="Email or phone number">
    <a href="#" class="login-btn" id="getpass-btn">Get Password</a>
  </form>

  <div class="other-options">
    <div class="option" id="newUser"><p class="option-text">New User</p></div>
    <div class="option" id="fPass"><p class="option-text"> Forgot password</p></div>
  </div>

</div>
