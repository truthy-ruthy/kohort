<div class="right-panel">
  <div class="right-header">
    <h1>Join a Kohort</h1>
  </div>
  <%= form_for(:kohort, url: kohort_path, :html => { :id => 'join-form' }) do |f| %>
      <%= collection_select(:frequency, :frequency_id, Frequency.all, :id, :how_often, :include_blank => "Frequency") %>
  <%= collection_select(:daytime, :daytime_id, Daytime.all, :id, :time_of_day, :include_blank => "Time of Day") %>
  <%= f.text_field :zipcode, :autocomplete => "off", placeholder: "Zip Code" %>
  <%= collection_select(:coeds, :coed_id, Coed.all, :id, :mixed, :include_blank => "Coed") %>
  <%= collection_select(:industries, :industry_id, Industry.all, :id, :field, :include_blank => "Industry/Field") %>
  <%= collection_select(:interactions, :interaction_id, Interaction.all, :id, :conversation_level, :include_blank => "Conversation") %>
  <%= submit_tag "Put me in a kohort!", class: "login-btn"%>
   <% end %>


  </div>
