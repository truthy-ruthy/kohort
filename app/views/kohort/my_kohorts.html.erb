<div class="right-panel">
  <%= select_tag(:kohort_frequency_id, options_for_select([['How often do you want to meet up?', 0], ['Daily', 1], ['Weekly', 2], ['Monthly', 3], ['Doesn\'t matter', 4]])) %>
